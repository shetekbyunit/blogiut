<div class="container">
    <div class="text-center mt-5 mb-5">
        <h1>Gestion d'un article</h1>
    </div>
    <div class="col-12 mb-1">
        <form action="articles.php" method="post" enctype="multipart/form-data">
            <div class="row">

            <label for="textetitre">Votre titre</label> 
                <div class="input-group mb-5">
                    <input type="text" name="titre" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" id="textetitre" value="">
                </div>
                
                
                <label for="texte2">Votre texte</label>
                <div class="input-group mb-4">
                    <textarea name="texte" class="form-control" aria-label="With textarea" id="texte2"></textarea>
                </div>

                <div class="form-group mb-4">
                    <label for="img">Votre Image :</label>
                    <input name="image" type="file" class="form-control-file" id="img">
                </div>

                <div class="form-check mb-4">
                    <label class="form-check-label" for="defaultCheck1">Article Visible</label>
                    <input class="form-check-input" type="checkbox" name="checkbox" value="" id="defaultCheck1" value="1">

                </div>
                <button class="btn btn-secondary" type="submit" name="ajouter" value="ajouter">Valider</button>
                <input id="id" name="id" type="hidden" value"{{ articles.getID}} ">

            </div>
        </form>
    </div>
</div>